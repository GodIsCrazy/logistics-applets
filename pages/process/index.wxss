.process-page {
  padding-top: 20rpx;
  height: 100%;
  overflow: auto;
  box-sizing: border-box;
}
.process-page .process-wrap {
  background: #FFFFFF;
  padding: 48rpx 44rpx;
}
.process-item {
  width: 100%;
  min-height: 50rpx;
  padding: 5px 0;
  position: relative;
}
.process-item:before {
  content: '';
  position: absolute;
  width: 4rpx;
  background: #EEEEEE;
  top: 44rpx;
  left: 20rpx;
    bottom: -10rpx;
}
.process-item:last-child:before {
  width: 0;
}
.process-item .process-state {
  text-align: center;
  position: absolute;
  height: 36rpx;
  width: 36rpx;
  line-height: 1;
  top: 6px;
}
.process-item .process-state ._i {
  display: inline-block;
  font-size: 44rpx;
  height: 36rpx;
  width: 36rpx;
  vertical-align: text-top;
}
.process-item .second-node {
  height: 24rpx;
  width: 24rpx;
}
.process-item .second-node ._i {
  font-size: 24rpx;
  height: 24rpx;
  width: 24rpx;
}
.process-item .process-content {
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  width: 100%;
  padding-left: 52rpx;
}
.process-item .process-content .content-box {
  line-height: 1.4;
  padding: 10rpx 16rpx;
  border: 1px solid #EEEEEE;
  border-radius: 0 8px 8px 8px;
}
.process-item .process-content .content-box .default-view {
  display: flex;
}
.process-item .process-content .content-box .extand-view {
  padding: 0 40rpx;
}
.process-item .process-content .content-box .process-title {
  flex: 1;
  padding-right: 58rpx;
  font-weight: bold;
  font-size: 28rpx;
  color: #333333;
}
.process-item .process-content .content-box .process-link {
  font-size: 22rpx;
  color: #999999;
  -webkit-flex-shrink: 0;
  flex-shrink: 0;
  line-height: 2;
  width: 160rpx;
}
.process-item .process-content .content-box .process-link ._i {
  font-size: 22rpx;
}
.process-item .process-content .content-box .process-link .extend {
  display: inline-block;
}
.second-item:before {
  width: 2rpx;
  top: 36rpx;
  left: 18rpx;
  bottom: -10rpx;
}
.second-node-title {
  font-size: 24rpx;
  color: #333333;
  font-weight: bold;
}
.second-node-text {
  font-size: 22rpx;
  color: #999999;
}